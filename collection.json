        {
          "name": "Revoke All Other Sessions",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{sessionId}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "sessions",
                "{{sessionId}}"
              ]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Get all sessions from environment variable",
                  "let sessions = JSON.parse(pm.environment.get('allSessions') || '[]');",
                  "",
                  "pm.environment.unset('sessionId');"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Check success status",
                  "pm.test('Status code 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Remove revoked session from allSessions",
                  "let sessions = JSON.parse(pm.environment.get('allSessions') || '[]');",
                  "let sessionId = pm.environment.get('sessionId');",
                  "sessions = sessions.filter(s => s.sessionId != sessionId);",
                  "pm.environment.set('allSessions', JSON.stringify(sessions));",
                  "",
                  "// Continue revoking next session if any",
                  "if (sessions.length > 0) {",
                  "    postman.setNextRequest('Revoke All Other Sessions');",
                  "} else {",
                  "    pm.environment.unset('sessionId');",
                  "}"
                ]
              }
            }
          ]
        }
